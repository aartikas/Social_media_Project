
        <h1> My Social Media Project/ <%=title%> </h1>
<% if(locals.user){%>
<section id="feed-posts">
        <h4>Posts</h4>
        <form action="/posts/create" id="new-post-form" method="POST">
                <textarea name="content" cols="30" rows="3" placeholder="Type Posts here.."></textarea>
                <input type="submit" value="Post">
        </form>
        
        <div id="post-list-container" >
                <ul>
                        <% for (post of posts){%>
                                <li><%= post.content%>
                                </li>

                        <%}%>
                </ul>
        </div>
        <%}%>


</section>